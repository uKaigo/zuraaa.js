{
  "compilerOptions": {
    "target": "es2020", // Versão que o NODE v14 (lts) está usando.
    "lib": ["es2020"],
    "module": "commonjs",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./lib"
  },
  "files": [
    "src/index.ts",
    "src/types.d.ts"
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}